                       <Insets bottom="10.0" />
                   </VBox.margin></Label>
               <TextField fx:id="entityNameField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="27.0" prefWidth="210.0" promptText="Name">
                   <VBox.margin>
                       <Insets bottom="5.0" />
                   </VBox.margin></TextField>
               <TextField fx:id="entityEmailField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="27.0" prefWidth="210.0" promptText="Email">
