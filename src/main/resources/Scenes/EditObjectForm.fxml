                   </VBox.margin></TextField>
               <TextField fx:id="entityPhoneField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="27.0" prefWidth="210.0" promptText="Phone number">
                   <VBox.margin>
                       <Insets bottom="5.0" />
                   </VBox.margin></TextField>
               <TextField fx:id="entityAddressField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="27.0" prefWidth="210.0" promptText="Address">
                   <VBox.margin>
                       <Insets bottom="5.0" />
                   </VBox.margin></TextField>

               <HBox alignment="CENTER" style="-fx-spacing: 8;">
                   <Button prefHeight="28.0" prefWidth="60.0" style="-fx-background-color: lightblue; -fx-background-radius: 7px;" onAction="#handleEntityEdit" text="Add">
                       <font>
                           <Font name="System Bold" size="12.0" />
                       </font>
                   </Button>

                   <Button prefHeight="28.0" prefWidth="60.0" style="-fx-background-color: #444444; -fx-text-fill: #FFFFFF; -fx-background-radius: 7px; -fx-font-weight: bold;" onAction="#handleCancel" text="Cancel" />
                   <VBox.margin>
                       <Insets bottom="10.0" top="10.0" />
                   </VBox.margin>
               </HBox>
           </VBox>
       </StackPane>
   </center>
    <bottom>
    </bottom>
