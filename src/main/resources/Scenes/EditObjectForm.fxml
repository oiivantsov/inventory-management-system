                   <Insets bottom="5.0" />
                </VBox.margin></TextField>
            <TextField fx:id="categoryField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="27.0" prefWidth="210.0" promptText="Category">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextField>
                <TextField fx:id="brandField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="27.0" prefWidth="210.0" promptText="Brand">
                <VBox.margin>
                   <Insets bottom="5.0" />
                </VBox.margin></TextField>
                <TextField fx:id="descriptionField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="27.0" prefWidth="210.0" promptText="Description">
                <VBox.margin>
                   <Insets bottom="5.0" />
                </VBox.margin></TextField>
                <TextField fx:id="quantityField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="27.0" prefWidth="210.0" promptText="Quantity">
                <VBox.margin>
                   <Insets bottom="5.0" />
                </VBox.margin></TextField>
                <HBox alignment="CENTER" style="-fx-spacing: 8;">

                    <Button fx:id="productEditButton" onAction="#handleProductEdit" prefHeight="28.0" prefWidth="60.0" style="-fx-background-color: lightblue; -fx-text-fill: black; -fx-background-radius: 7px; -fx-font-weight: bold;" text="EDIT" />
